<Screen_Menu>:
    name: "menu"
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.8, 0.8, 0.8, 1
            Rectangle:
                size: self.size
                pos: self.pos
        #
        Widget:
            canvas.before:
                Color:
                    rgba: 0.4, 0.9, 1, 1
                Rectangle:
                    pos: 0, self.height - 160
                    size: 1280, 160
        #
        Widget:
            canvas.before:
                Color:
                    rgba: 0.3, 0.3, 0.3, 1
                Line:
                    points: [0, self.height - 160, 1280, self.height - 160]
                    width: 1.7
        #
        Label:
            text: "Py Bank"
            font_size: 50
            pos_hint: {'center_x':.5, 'center_y':.89}
            size_hint: None, None
            bold: True
            color: 1, 1, 1, 1
            outline_width: 1
            outline_color: 0.5, 0.5, 0.5, 1
        #
        Label:
            text: "Consultar:"
            font_size: 25
            pos_hint: {'center_x':.3, 'center_y':.7}
            size_hint: None, None
            bold: True
            color: 0, 0, 0, 1
        #
        Button:
            text: "Extrato"
            size_hint: None, None
            size: 200, 50
            font_size: 18
            pos_hint: {'center_x':.3, 'center_y':.6}
            background_color: 0.2, 0.8, 0.2, 1
            on_release: root.manager.transition.direction = 'left'
            on_press: app.root.current = 'extrato'
        #
        Button:
            text: "Perfil"
            size_hint: None, None
            size: 200, 50
            font_size: 18
            pos_hint: {'center_x':.3, 'center_y':.5}
            background_color: 0.2, 0.8, 0.2, 1
            on_release: root.manager.transition.direction = 'left'
            on_press: app.root.current = 'perfil'
        #
        Label:
            text: "Realizar:"
            font_size: 25
            pos_hint: {'center_x':.7, 'center_y':.7}
            size_hint: None, None
            bold: True
            color: 0, 0, 0, 1
        #
        Button:
            text: "Saque"
            size_hint: None, None
            size: 200, 50
            font_size: 18
            pos_hint: {'center_x':.7, 'center_y':.6}
            background_color: 0.2, 0.8, 0.2, 1
            on_release: root.manager.transition.direction = 'left'
            on_press: app.root.current = 'saque'
        #
        Button:
            text: "Depósito"
            size_hint: None, None
            size: 200, 50
            font_size: 18
            pos_hint: {'center_x':.7, 'center_y':.5}
            background_color: 0.2, 0.8, 0.2, 1
            on_release: root.manager.transition.direction = 'left'
            on_press: app.root.current = 'deposito'
        #
        Button:
            text: "Voltar ao login"
            size_hint: None, None
            size: 200, 50
            font_size: 18
            pos_hint: {'center_x':.5, 'center_y':.1}
            background_color: 0.5, 0.5, 0.5, 1
            on_release: root.manager.transition.direction = 'left'
            on_press: app.root.current = 'login'
