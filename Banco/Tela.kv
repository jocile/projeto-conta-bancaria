            size: self.texture_size
            pos_hint: {'x':.6, 'y':.67}
            color: 0.5, 0, 0, 1
        #
        Label:
            text: "Numero da casa:"
            font_size: 20
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.6, 'y':.6}
            color: 0, 0, 0, 1
        #
        TextInput:
            id: Ncasa_cad
            size_hint: None, None
            size: 250, 40
            halign: 'left'
            pos_hint: {'x':.6, 'y':.54}
            color: 0, 0, 0, 1
        #
        Label:
            id: Ncasa_cad_error
            text: ""
            font_size: 15
            halign: 'left'
            size_hint: None, None
