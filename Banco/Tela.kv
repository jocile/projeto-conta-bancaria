        #
        Label:
            id: email_cad_error
            text: ""
            font_size: 15
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.2, 'y':.19}
            color: 0.5, 0, 0, 1
        #
        Label:
            text: "CEP:"
            font_size: 20
            halign: 'left'
