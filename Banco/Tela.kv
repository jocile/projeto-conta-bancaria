ScreenManager:
    id: screen_manager
    Screen_Login:
        name: "login"
    Screen_Cadastro:
        name: "cadastro"
    Screen_Menu:
        name: "menu"
#
<SpinnerOption>:
    size_hint_y: None
    text_size: self.size
    valign: 'center'
    halign: 'center'
    color: 0, 0, 0, 1
    background_normal: ''
#
<Screen_Login>:
    name: "login"
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.8, 0.8, 0.8, 1
            Rectangle:
                size: self.size
                pos: self.pos
        #
        Label:
            text: "FAÇA SEU LOGIN"
            font_size: 30
            pos_hint: {'center_x':.5, 'center_y':.9}
            size_hint: None, None
            bold: True
            color: 0, 0, 0, 1
        #
        Label:
            id: verificacao_log_error
            text: ""
            font_size: 18
            halign: 'center'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x':.5, 'center_y':.85}
            color: 0.5, 0, 0, 1
        #
        Label:
            text: "Digite seu CPF"
            font_size: 20
            pos_hint: {'center_x':.5, 'center_y':.7}
            color: 0, 0, 0, 1
        #
        TextInput:
            id: cpf_log
            hint_text: 'digite somente os números'
            size_hint: None, None
            size: 200, 40
            pos_hint: {'center_x': 0.5, 'center_y': 0.63}
        #
        Label:
            id: cpf_log_error
            text: ""
            font_size: 15
            pos_hint: {'center_x':.48, 'center_y':.58}
            color: 0.5, 0, 0, 1
        #
        Label:
            text: "Digite sua senha"
            font_size: 20
            pos_hint: {'center_x':.5, 'center_y':.5}
            color: 0, 0, 0, 1
        #
        TextInput:
            id: senha_log
            size_hint: None, None
            size: 200, 40
            pos_hint: {'center_x': 0.5, 'center_y': 0.43}
        #
        Label:
            id: senha_log_error
            text: ""
            font_size: 15
            pos_hint: {'center_x':.48, 'center_y':.38}
            color: 0.5, 0, 0, 1
        #
        Button:
            text: "Entrar"
            size_hint: None, None
            size: 200, 40
            font_size: 20
            pos_hint: {'center_x': 0.5, 'center_y': 0.25}
            background_color: 0.2, 0.8, 0.2, 1
            on_release: root.informacoes_de_login(cpf_log.text, senha_log.text)
        #
        Button:
            text: "Cadastro"
            size_hint: None, None
            size: 200, 40
            font_size: 20
            pos_hint: {'center_x': 0.5, 'center_y': 0.15}
            background_color: 0.2, 0.2, 0.8, 1
            on_press: root.manager.transition.direction = 'right'
            on_release: app.root.current = 'cadastro'
        #
#
<Screen_Cadastro>:
    name: "cadastro"
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.8, 0.8, 0.8, 1
            Rectangle:
                size: self.size
        #
        Label:
            text: "CADASTRO"
            font_size: 30
            pos_hint: {'center_x':.5, 'center_y':.9}
            size_hint: None, None
            bold: True
            color: 0, 0, 0, 1
        #
        Label:
            text: "Nome:"
            font_size: 20
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.2, 'y':.76}
            color: 0, 0, 0, 1
        #
        TextInput:
            id: nome_cad
            size_hint: None, None
            size: 250, 40
            halign: 'left'
            pos_hint: {'x':.2, 'y':.7}
            color: 0, 0, 0, 1
        #
        Label:
            id: nome_cad_error
            text: ""
            font_size: 15
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.2, 'y':.67}
            color: 0.5, 0, 0, 1
        #
        BoxLayout:
            orientation: "horizontal"
            size_hint: None, None
            size: self.minimum_size
            halign: 'left'
            pos_hint: {'x': 0.2, 'y': 0.62}
            spacing: 15

            Label:
                text: "CPF:"
                font_size: 20
                color: 0, 0, 0, 1
                size_hint_x: None                       # Define que o tamanho em X não é relativo
                width: self.texture_size[0]             # Define a largura com base no tamanho do texto
            Label:
                text: "DIGITE SÓ OS NÚMEROS"
                font_size: 15
                color: 0.6, 0.6, 0.6, 1
                size_hint_x: None                       # Define que o tamanho em X não é relativo
                width: self.texture_size[0]             # Define a largura com base no tamanho do texto
        #
        TextInput:
            id: cpf_cad
            size_hint: None, None
            size: 250, 40
            halign: 'left'
            pos_hint: {'x':.2, 'y':.54}
            color: 0, 0, 0, 1
        #
        Label:
            id: cpf_cad_error
            text: ""
            font_size: 15
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.2, 'y':.51}
            color: 0.5, 0, 0, 1
        #
        Label:
            text: "DDD/Celular:"
            font_size: 20
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.2, 'y':.44}
            color: 0, 0, 0, 1
        #
        BoxLayout:
            orientation: "horizontal"
            size_hint: None, None
            size: self.minimum_size
            halign: 'left'
            pos_hint: {'x': 0.2, 'y':.38}
            spacing: 5

            TextInput:
                id: ddd_cad
                size_hint: None, None
                size: 50, 40
                color: 0, 0, 0, 1
                size_hint_x: None
                width: self.size[0]
                text: ""
                font_color: 0.6, 0.6, 0.6, 1
            
            TextInput:
                id: numero_cad
                size_hint: None, None
                size: 120, 40
                halign: 'left'
                color: 0, 0, 0, 1
                size_hint_x: None
                width: self.size[0]
                text: ""
                font_color: 0.6, 0.6, 0.6, 1
        #
        Label:
            id: DDDnumero_cad_error
            text: ""
            font_size: 15
            halign: 'left'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x':.2, 'y':.35}
            color: 0.5, 0, 0, 1
        #
        Label:
            text: "E-mail:"
            font_size: 20
            halign: 'left'
