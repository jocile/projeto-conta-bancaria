                text: "Realizar Cadastro"
                size_hint: None, None
                size: 200, 50
                font_size: 18
                background_color: 0.2, 0.8, 0.2, 1
                on_release: root.informacoes_de_cadastro(nome_cad.text, cpf_cad.text, ddd_cad.text, numero_cad.text, email_cad.text, cep_cad.text, Ncasa_cad.text, senha_cad.text, confirmSenha_cad.text)
